<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    tools:context="com.arafat.Pouroshova.auth.RegisterActivity">


    <android.support.v7.widget.CardView
        android:id="@+id/cardViewPointBanner"
        android:layout_width="match_parent"
        android:layout_height="324dp"
        android:layout_marginTop="10dp"
        card_view:cardCornerRadius="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="রেজিস্ট্রেশন"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

                <EditText
                    android:id="@+id/etRName"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/bg_edittext_focused"
                    android:ems="10"
                    android:hint="নাম"
                    android:inputType="textPersonName"
                    android:paddingLeft="15dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

                <EditText
                    android:id="@+id/etREmail"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/bg_edittext_focused"
                    android:ems="10"
                    android:hint="ইমেইল"
                    android:inputType="textPersonName"
                    android:paddingLeft="15dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

                <EditText
                    android:id="@+id/etRLocation"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/bg_edittext_focused"
                    android:ems="10"
                    android:hint="ঠিকানা"
                    android:inputType="text"
                    android:paddingLeft="15dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />


                <Button
                    android:id="@+id/btnSignUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:text="রেজিস্ট্রেশন" />

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>